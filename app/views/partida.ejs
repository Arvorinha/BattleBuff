<!DOCTYPE html>
<html lang="pt" dir="ltr">
  <head>
    <meta charset="utf-8">
    <script src="/socket.io/socket.io.js"></script>
  	<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
  	<script>

      var socket = io.connect();

      var url = window.location.href;
      var salaID = url.split("/")[4];

      socket.on('connect', function() {
         socket.emit('room', salaID);
      });

      socket.on('room users', function(userlist){
        document.getElementById("nPessoas").innerHTML = userlist;
      });

      function credencial(btrid, nick, img){
        socket.emit('new user', btrid, nick, img, salaID);
      }

    </script>
    <title>Salas</title>
  </head>
  <body onload="credencial(<%= btrid%>,'<%= nick%>',<%= img%>);">
    Pessoas na sala: <span id="nPessoas">0</span>
  </body>
</html>