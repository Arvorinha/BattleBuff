<!DOCTYPE html>
<html lang="pt" dir="ltr">

<head>
  <% include includes/header.ejs %>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
  <title>Partida</title>
</head>

<body onload="credencial(Math.floor(Math.random() * 10000000000000000),'<%= session.nick%>',<%= session.img%>, Math.floor(Math.random() * 10000));">
  <div class="page-wrapper chiller-theme toggled">
    <% include includes/side-bar.ejs %>
    <main class="page-content">
      <div class="container-fluid min-100">
        <div class="card">
          <div class="card-header">
            Sala do tetis
          </div>
          <div class="card-subheader">
            <div class="card-tabela">Time A</div>
            <div class="card-tabela">Picks</div>
            <div class="card-tabela">Time B</div>
          </div>
          <div class="card-body">
            <div class="players" id="time1">
            </div>
            <div class="players" id="picks">
            </div>
            <div class="players" id="time2">
            </div>
            <div class="resultado" style="display: none;">
              <span>Reportar resultado:</span><br>
                <div class="caixa">
                  <button type="button" class="btn btn-success">Partida terminada</button>
                </div>
                <div class="caixa">
                  <button type="button" class="btn btn-danger">Partida Cancelada</button>
                </div>
            </div>
          </div>
        </div>
        Pessoas na sala: <span id="nPessoas">0</span>
        <input type="button" onclick="atualizarTela()" value="atualiza">
        <span id="turno" class="false"></span>
      </div>
      <% include includes/footer.ejs %>
    </main>
    <script src="../js/socketPartida.js"></script>
</body>

</html>
