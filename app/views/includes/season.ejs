<form action="/alterarRanking" method="POST">
  <!-- Modal -->
  <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h3 class="modal-title text-primary" id="exampleModalLongTitle">Confirmação</h3>
        </div>
        <div class="modal-body">
          <h4 class="text-danger">Realmente deseja trocar a season atual para a nova ?</h4>
          <h5 class="text-danger">Obs: Não é possivel voltar atrás</h5>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">Sim</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Não</button>
        </div>
      </div>
    </div>
  </div>
  <!-- /Modal -->
  <div class="form-group">
    <div class="col-md-4">
      <label for="nomeSeason">Nome Season</label>
      <input type="text" name="season" id="nomeSeason" class="form-control">
    </div>
  </div>
    <div class="form-group">
      <div class="col-md-9">
        <input type="button" value="Incluir Season" style="margin-top:3px" type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">
      </div>
    </div>
</form>
<div class="col-md-12">
  <%if(results.length > 0){%>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Data inicio</th>
            <th>Data fim</th>
          </tr>
        </thead>
        <tbody>
          <%for(var i=0; i < results.length ; i++){%>
            <tr>
              <td><%= results[i].NM_SEASON%></td>
              <td><%= results[i].DT_INICIO != undefined ? moment(results[i].DT_INICIO).format('DD/MM/YYYY') : null%></td>
              <td><%= results[i].DT_FIM != undefined ? moment(results[i].DT_FIM).format('DD/MM/YYYY') : null%></td>
            </tr>
            <%}%>
          </tbody>
        </table>
    </div>
  <%}%>
  <% if(numPagina > 0) {%>
    <nav aria-label="pagination example">
      <ul class="pagination justify-content-end">
        <li class="page-item">
          <a class="page-link bg-light" href="/admin/season?pagina=<%= pageAtual-1 > 0 ? pageAtual-1 : pageAtual %>">Previous</a>
        </li>
        <% for(var i = 1; i <= numPagina; i++) {%>
          <li class="page-item"><a class="page-link bg-light" href="/admin/season?pagina=<%= i %>"><%= i %></a></li>
          <%}%>
          <li class="page-item">
            <a class="page-link bg-light" href="/admin/season?pagina=<%= pageAtual+1 <= numPagina ? pageAtual+1 : pageAtual %>">Next</a>
          </li>
        </ul>
      </nav>
  <%}%>
</div>
