      // for (var i = 0; i < rank.length; i++) {
      //   tabela += "<tr> ";
      //     tabela += "<td>"+(Number(i)+1)+"</td> ";
      //     tabela += "<td><img src=\"https://battlerite.club/_Assets/images/avatar/"+rank[i].FOTO+".png\" alt=\"\" width=\"50px\" height=\"50px\"></td> "
      //     tabela += "<td>"+rank[i].NICK+"</td> ";
      //     tabela += "<td>"+rank[i].MMR+"</td> ";
      //   tabela +="</tr> ";
      // }
      // $("#bodyTabelaRank").html(tabela);
    }
      $(document).ready(function () {
        startPage();
        $('select').change(function () {
          $("#bodyTabelaRank").html("<div class=\"col-md-12 col-md-offset-7\"><div class=\"align-items-center justify-content-center\"><img src='/imgs/loading.gif'></div></div>");
          $.ajax({
            type:"GET",
            url:"/rank",
            data:{season:$(this).val()}
          })
          .done(function (rank) {
            gerarTabela(rank);
          })
        })
        $('a#paginacao').click(function () {
          console.log($(this).html());
          $.ajax({
            type:"GET",
            url:"/rank",
            data:{
              pagina:$(this).html(),
              season:$('select').val()
            }
          })
        })
      })
    </script>
  </body>
</html>
